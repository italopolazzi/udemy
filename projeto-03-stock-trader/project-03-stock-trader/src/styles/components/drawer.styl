}

.drawer-menu {
  position: relative;
  width: 100%;

  .menu {
    width: 100%;
    // background: red;
    display: flex;
    flex-flow: column wrap;
    position: relative;

    .router-link {
      flex: 0 1 100%;
      line-height: 3 * theme.sizes.font;
      font-weight: bold;
      // padding-left: theme.sizes.font;
    }
  }
}


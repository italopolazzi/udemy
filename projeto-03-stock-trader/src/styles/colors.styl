main_light = white;
main_dark = #FF2B33;
colors = {
  light: {
    light_1: lighten(main_light, 40),
    light_2: lighten(main_light, 30),
    light_3: lighten(main_light, 20),
    light_4: lighten(main_light, 10),
    light_5: main_light,
    light_6: darken(main_light, 10),
    light_7: darken(main_light, 20),
    light_8: darken(main_light, 30),
    light_9: darken(main_light, 40)
  },
  dark: {
    dark_1: lighten(main_dark, 40),
    dark_2: lighten(main_dark, 30),
    dark_3: lighten(main_dark, 20),
    dark_4: lighten(main_dark, 10),
    dark_5: main_dark,
    dark_6: darken(main_dark, 10),
    dark_7: darken(main_dark, 20),
    dark_8: darken(main_dark, 30),
    dark_9: darken(main_dark, 40)
  },
  commom: {
    error: #FF2B33,
    info: blue,
    success: green,
    alert: yellow,
    dark: #333,
    light: #fafafa
  }
};

for _class, value in (colors.commom) {
  .{_class} {
    background: value!important;
  }
  .text-{_class} {
    color: value !important;
  }
}
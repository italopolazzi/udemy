@import url('https://fonts.googleapis.com/css?family=Montserrat:100,400,700&display=swap');
@import './config';
@import './colors';
@import './theme';
@import './sizes';
@import './alignments';
@import './transitions';
@import './utils';
@import './components';

* {
  outline: none;
  box-sizing: border-box;

}

body {
  overflow: hidden;
  background: theme[tt].body.background;
  color: theme[tt].body.color;
  margin: 0;
  padding: 0;
  font-family: 'Montserrat', Helvetica, Arial, sans-serif;
  font-size: theme.sizes.font;
  font-weight: 400;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1 {
  font-size: 3rem;
}

h2 {
  font-size: 2.5rem;
}

h3 {
  font-size: 2rem;
}

h4 {
  font-size: 1.8rem;
}

h5 {
  font-size: 1.6rem;
}

h6 {
  font-size: 1.2rem;
}